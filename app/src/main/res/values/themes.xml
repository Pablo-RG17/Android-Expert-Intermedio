<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HoroscApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HoroscApp" parent="Base.Theme.HoroscApp"/>

    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/dancing</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Body" parent="Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>

    </style>
</resources>